{
	"$schema": "http://json-schema.org/draft-07/schema#",
  "cardType": {
    "type": "string",
    "enum": [ "summon", "spell", "aura" ]
  },
  "phase": {
    "type": "string",
    "enum": ["draw", "main", "combat", "attack", "damage", "secondMain", "end", "playerDraw"] 
  },
  "costType": {
    "type": "string",
    "enum": ["sacrificeStones", "sacrifice","tribute","exileFromHand", "exileFromGraveyard", "discard", "exile", "loseLife", "discardOrSacrificeMerfolk"] 
  },
  "tribe": {
    "type": "string",
    "enum": [ "golem", "merfolk", "shadow", "goblin", "treefolk" ]
  },
  "zone": {
    "type": "string",
    "enum": [ "deck", "hand", "play", "graveyard", "exile" ]
  },
  "tokenType": {
    "type": "string",
    "enum": [ "stone", "herb", "golem", "merfolk", "ghost", "goblin", "plant", "tree" ]
  },
  "keyword": {
    "type": "string",
    "enum": [
      "haunt",
      "blitz",
      "sprout",
      "trample",
      "taunt",
      "dive",
      "scorch",
      "exhaust",
      "spectral"
    ]
  },
	"restriction": {
		"type": "string",
		"enum": [
			"createsStones",
			"attacking",
			"notFirst",
			"nonSummon",
			"nonToken",
			"nonMerfolk",
			"nonTreefolk",
			"attack",
			"defense",
			"oneOne",
			"cost",
			"cantReduceBelowOne",
			"youControl",
			"hasKeyword",
			"keywordsOrAbilities",
			"defenseGreaterThanAttack"
		]
	}
}
